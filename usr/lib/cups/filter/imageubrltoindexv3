# Make sure we have enough options
if [ $# != 5 -a $# != 6 ]; then
  echo "ERROR: $0 jobid user name nb options [filename]" >&2
  exit 1
fi

NB=$4
OPTIONS=$5
FILE=$6

. /usr/share/cups/braille/indexv3.sh
printf "$INIT"

# Enter 4-dot graphic mode
printf "\033\007"

echo "INFO: Writing text to Index embosser" >&2
( if [ -z "$FILE" ]
then
  cat
else
  cat "$FILE"
fi ) | sed \
	-e 's/⠀/@@/g' \
	-e 's/⠁/A@/g' \
	-e 's/⠂/B@/g' \
	-e 's/⠃/C@/g' \
	-e 's/⠄/D@/g' \
	-e 's/⠅/E@/g' \
	-e 's/⠆/F@/g' \
	-e 's/⠇/G@/g' \
	-e 's/⡀/H@/g' \
	-e 's/⡁/I@/g' \
	-e 's/⡂/J@/g' \
	-e 's/⡃/K@/g' \
	-e 's/⡄/L@/g' \
	-e 's/⡅/M@/g' \
