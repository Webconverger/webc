	-e 's/⢰/@N/g' \
	-e 's/⢱/AN/g' \
	-e 's/⢲/BN/g' \
	-e 's/⢳/CN/g' \
	-e 's/⢴/DN/g' \
	-e 's/⢵/EN/g' \
	-e 's/⢶/FN/g' \
	-e 's/⢷/GN/g' \
	-e 's/⣰/HN/g' \
	-e 's/⣱/IN/g' \
	-e 's/⣲/JN/g' \
	-e 's/⣳/KN/g' \
	-e 's/⣴/LN/g' \
	-e 's/⣵/MN/g' \
	-e 's/⣶/NN/g' \
	-e 's/⣷/ON/g' \
	-e 's/⢸/@O/g' \
	-e 's/⢹/AO/g' \
	-e 's/⢺/BO/g' \
	-e 's/⢻/CO/g' \
	-e 's/⢼/DO/g' \
	-e 's/⢽/EO/g' \
	-e 's/⢾/FO/g' \
	-e 's/⢿/GO/g' \
	-e 's/⣸/HO/g' \
	-e 's/⣹/IO/g' \
	-e 's/⣺/JO/g' \
	-e 's/⣻/KO/g' \
	-e 's/⣼/LO/g' \
	-e 's/⣽/MO/g' \
	-e 's/⣾/NO/g' \
	-e 's/⣿/OO/g' \
	\
	-e 's/@*$//' \
	-e 's/^$/'$'\015''/' -e 's/\([^'$'\015'']\)$/\1'$'\015''/'

# Exit 4-dot graphic mode
printf '\033\006'
# Finish document
printf '\032'

echo "INFO: Ready" >&2
